@model DeleteAuthorViewModel
@{
    ViewData["Title"] = "Delete Author";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-body p-5 text-center">
                    <h2 class="card-title mb-4 text-danger">Delete Author</h2>
                    <div class="mb-4">
                        <img src="@Model.Photo"
                             alt="@Model.Name"
                             class="rounded-circle shadow-sm border"
                             style="width: 150px; height: 150px; object-fit: cover;" />
                    </div>
                    <h4 class="mb-3">@Model.Name</h4>
                    @if (Model.BooksCount > 0)
                    {
                        <p class="text-secondary mb-4">
                            This author has <strong>@Model.BooksCount</strong> book(s) associated.
                        </p>
                    }
                    else
                    {
                        <p class="text-muted mb-4">
                            This author has no books.
                        </p>
                    }
                    <form asp-action="Delete" method="post" class="text-start">
                        <input type="hidden" asp-for="Id" />
                        @if (Model.BooksCount > 0)
                        {
                            <div class="form-check mb-3">
                                <input class="form-check-input" asp-for="ConfirmDeleteBooks" />
                                <label class="form-check-label" asp-for="ConfirmDeleteBooks">
                                    Also delete all books by this author (Required)
                                </label>
                            </div>
                        }
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Cancel
                            </a>

                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
