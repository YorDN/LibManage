@model DeleteBookViewModel
@{
    ViewData["Title"] = "Confirm Deletion";
}

<div class="container mt-5 text-center">
    <h3 class="text-danger">Are you sure you want to delete this book?</h3>
    <div class="my-4">
        <h4>@Model.Title</h4>
        <img src="@Model.Cover" alt="Cover of @Model.Title" style="max-height: 250px;" class="shadow rounded" />
    </div>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
</div>
