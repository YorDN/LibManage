@using Microsoft.AspNetCore.Identity

@model PublisherDetailsViewModel

@{
    ViewData["Title"] = $"Publisher: {Model.Name}";
    var user = User;
    bool isAdminOrManager = user.IsInRole("Admin") || user.IsInRole("Manager");
}

<div class="container mt-4">
    <div class="mt-4">
        <a asp-action="All" class="btn btn-md mb-4 d-inline-flex align-items-center justify-content-center"><i class="bx bx-chevron-left bx-sm" style="font-size: 1.4rem;"></i> Back to Publishers</a>
    </div>
    <div class="row align-items-center">
        <div class="col-md-4 text-center">
            <img src="@Model.Logo" alt="@Model.Name" class="img-fluid rounded shadow mb-3" style="max-height: 300px;" />
        </div>
        <div class="col-md-8">
            <h2>@Model.Name</h2>

            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <p class="mt-3">@Model.Description</p>
            }

            <dl class="row">
                @if (Model.Country != null)
                {
                    <dt class="col-sm-4">Country</dt>
                    <dd class="col-sm-8">@Model.Country</dd>
                }

                @if (Model.Website != null)
                {
                    <dt class="col-sm-4">Website</dt>
                    <dd class="col-sm-8"><a href="@Model.Website" target="_blank">@Model.Website</a></dd>
                }
            </dl>

            @if (isAdminOrManager)
            {
                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                </div>
            }
        </div>
    </div>

    <hr />

    <h4 class="mt-4 mb-3">Books published by @Model.Name</h4>

    @if (Model.PublishedBooks.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var book in Model.PublishedBooks)
            {
                <div class="col">
                    <div style="display: flex; justify-content: center; text-align: center">
                        <a href="@Url.Action("Details", "Books", new { id = book.Id })" class="bookLink">
                            <div class="rounded p-3 bg-white bookBox" style="width: 250px;">
                                <div style="display: flex; justify-content: center;">
                                    <img src="@book.Cover"
                                         alt="@book.Title"
                                         class="img-fluid mb-2"
                                         style="object-fit: cover; height: 200px;" />
                                </div>
                                <div class="my-1">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= book.Rating)
                                        {
                                            <i class="bi bi-star-fill text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star text-warning"></i>
                                        }
                                    }
                                </div>
                                <small class="text-muted d-block">Author: @book.AuthorName</small>
                                <strong class="d-block" title="@book.Title"
                                        style="
                                    display: -webkit-box;
                                    -webkit-line-clamp: 2;
                                    -webkit-box-orient: vertical;
                                    overflow: hidden;
                                    text-overflow: ellipsis;
                                    height: 2.8em;
                                    line-height: 1.4em;
                                                    ">
                                    @book.Title
                                </strong>

                                <em class="text-muted small">(@book.BookType)</em>

                                @if (book.IsTaken)
                                {
                                    <div class="text-danger fw-bold small">Taken</div>
                                }
                                else
                                {
                                    <div class="text-success fw-bold small">Available</div>
                                }
                            </div>
                        </a>

                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">This publisher hasn't published any books yet.</p>
    }
    <div class="mt-4">
        <a asp-action="All" class="btn btn-secondary">Back to Publishers</a>
    </div>
</div>
