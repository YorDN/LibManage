@model IEnumerable<ManageUserViewModel>
@{
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

<h2>Manage Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Full Name</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FullName</td>
                <td>@user.Role</td>
                <td>
                    <form asp-action="ChangeRole" method="post" class="d-inline">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="newRole" class="form-select d-inline w-auto">
                            <option>User</option>
                            <option>Manager</option>
                            <option>Admin</option>
                        </select>
                        <button class="btn btn-sm btn-primary">Change</button>
                    </form>

                    @if (user.Role != "Admin")
                    {
                        <form asp-action="DeleteUser" method="post" class="d-inline">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" asp-action="All" asp-route-page="@i">@i</a>
            </li>
        }
    </ul>
</nav>
