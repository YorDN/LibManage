@model IEnumerable<UnapprovedReviewViewModel>

@{
    ViewData["Title"] = "Review Moderation";
}

<h2 class="mb-4">Unapproved Reviews</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">No pending reviews for moderation.</div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>User</th>
                <th>Book</th>
                <th>Rating</th>
                <th>Comment</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.Username</td>
                    <td>@review.BookTitle</td>
                    <td>@review.Rating</td>
                    <td>@(string.IsNullOrWhiteSpace(review.Comment) ? "(No comment)" : review.Comment)</td>
                    <td>@review.CreatedAt.ToShortDateString()</td>
                    <td>
                        <form asp-action="Approve" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@review.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        </form>
                        <form asp-action="Delete" method="post" class="d-inline ms-1">
                            <input type="hidden" name="id" value="@review.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
